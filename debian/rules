#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	cd dependencies \
		&& mkdir -p build/linux \
		&& cd build/linux \
		&& cmake -DCMAKE_INSTALL_PREFIX=./dist -G "Unix Makefiles" ../.. \
		&& cd ../../..
	mkdir -p build/linux \
		&& cd build/linux \
		&& cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr -G "Unix Makefiles" ../..

override_dh_auto_build:
	cd dependencies/build/linux \
		&& make \
		&& cd ../../..
	cd build/linux \
		&& make

override_dh_auto_install:
	cd build/linux \
		&& make install

override_dh_auto_clean:
	rm -rf dependencies/build dependencies/dist
	rm -rf build dist
